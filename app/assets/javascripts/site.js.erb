//comment rating
function refreshRating () {
  $('.star-rating').raty({
    starHalf: '<%= asset_path 'star-half.png' %>',
    starOff: '<%= asset_path 'star-off.png' %>',
    starOn:  '<%= asset_path 'star-on.png' %>',
    scoreName: 'comment[star_rating]'
  });

  $('.star-rated').raty({
    starHalf: '<%= asset_path 'star-half.png' %>',
    starOff: '<%= asset_path 'star-off.png' %>',
    starOn: '<%= asset_path 'star-on.png' %>',
    readOnly: true,
  });
};

$(document).on('turbolinks:load ajax:success', function(){
  //comment rating refresh
  refreshRating();

  //image zoom
  $('.img-zoom').elevateZoom({
    zoomType: "lens",
    lensShape: "round",
    lensSize: "200"
  });

  //scroll up button
  $('#scroll-up').scrollUp();
});
