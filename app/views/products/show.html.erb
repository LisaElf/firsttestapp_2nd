<p id="notice"><%= notice %></p>


<div class="container-fluid product-detail">
  <h1><%= @product.name %></h1>
  <div class="row">
    <div class="col-sm-4 product-show">
      <p>
        <strong>Description:</strong>
        <br>
        <%= @product.description %>
      </p>
      <p>
        <strong>Colour:</strong>
        <br>
        <%= @product.colour %>
      </p>
      <p>
        <strong>Price:</strong>
        <br>
        $ <%= @product.price %>
      </p>
    </div>
    <div class="col-sm-8 product-image">
      <%= image_tag(@product.image_url, class:"img-fluid") unless @product.image_url.nil? %>
    </div>
  </div><!--end row-->
  <div class="product-edit-back">
    <br>
  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>
  </div>
</div>
