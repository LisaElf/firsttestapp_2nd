<% if signed_in? %>
  <div class="col-12">
    <h3>Add a Review here:</h3>
  </div>
  <div class="form-user-comment">
    <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
      <div class="form-group">
        <%= f.label :comment_title, "Comment Headline" %>
        <%= f.text_field :comment_title, class:"form-control" %>
      </div>

      <div class="star-rating"></div>

      <div class="form-group">
        <%= f.label :comment_body, "Your Comment" %>
        <%= f.text_area :comment_body, class:"form-control" %>
      </div>

      <div class="submit-button">
        <%= f.submit "Submit Your Review" %>
      </div>
    <% end %>
    <p class="thanks-review" hidden>Thank you for your review!</p>
  </div>
<% end %>
